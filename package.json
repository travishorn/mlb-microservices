  },
  "bugs": {
    "url": "https://github.com/travishorn/mlb-microservices/issues"
  },
  "homepage": "https://github.com/travishorn/mlb-microservices#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "dependencies": {
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
